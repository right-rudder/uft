const { content } = Astro.props;

---

<section class="container mx-auto px-4 py-8 relative">
  <div class="text-center mb-8">
    <p class="text-xl lg:text-3xl text-gray-100 leading-relaxed bg-accent-500 -skew-x-12 p-12">{content.intro}</p>
  </div>

  <div class="my-18">
    {content.courses.map((course) => (
      <div class="mb-8">
        <h2 class="text-2xl font-bold text-accent-500 mb-4">{course.title}</h2>
        <p class="text-gray-700 leading-relaxed mb-4">{course.text}</p>
        {course.ul && (
          <>
            <p class="font-semibold text-gray-800">{course.ul}</p>
            <ul class="list-disc pl-6 text-gray-700">
              {course.lis?.map((li) => (
                <li class="mb-2">{li}</li>
              ))}
            </ul>
          </>
        )}
      </div>
    ))}
  </div>

  <div class="mb-12">
    <h2 class="text-2xl font-bold text-accent-500 mb-4">{content.reasonsH}</h2>
    <ul class="list-disc pl-6 text-gray-700">
      {content.reasonsLi.map((reason) => (
        <li class="mb-2">{reason}</li>
      ))}
    </ul>
    <p class="mt-4 text-gray-700" set:html={content.reasonsCTA}></p>
  </div>

  <div>
    {content.additionalInfo.map((info) => (
      <div class="mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">{info.h}</h3>
        <p class="text-gray-700">{info.p}</p>
      </div>
    ))}
  </div>
</section>
