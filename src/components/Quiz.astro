---
const { content } = Astro.props;

const FORM_WEBHOOK_URL = content.form_url;

const REDIRECT_URL = content.redirect_url;

---

<section class="relative isolate bg-white py-0">
  <div class="mx-auto grid max-w-7xl grid-cols-1 lg:grid-cols-2">
    <div
      class="relative px-6 pb-20 pt-24 sm:pt-32 lg:static lg:px-8 lg:py-48"
    >
      <div class="mx-auto max-w-xl lg:mx-0 lg:max-w-lg">
        <h2 class="text-5xl font-bold tracking-tight text-gray-900">
          {content.form_h}
        </h2>
        <p class="mt-12 text-lg leading-8 text-gray-600">
          {content.form_p1}
        </p>
        <p class="mt-2 text-lg leading-8 text-gray-600">
          {content.form_p2}
        </p>
        <dl class="mt-10 space-y-4 text-base leading-7 text-gray-600 font-sans2">
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Address</span>
              <svg
                class="h-7 w-6 text-gray-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z"
                ></path>
              </svg>
            </dt>
            <a class="hover:text-gray-900" href={content.gmaps} target="_blank">
              <dd>{content.address_1}<br />{content.address_2}</dd>
            </a>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Telephone</span>
              <svg
                class="h-7 w-6 text-gray-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
              </svg>
            </dt>
            <dd>
              <a class="hover:text-gray-900" href={`tel:${content.phone_num}`}
                >{content.phone_num}</a
              >
            </dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Email</span>
              <svg
                class="h-7 w-6 text-gray-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </dt>
            <dd>
              <a class="hover:text-gray-900" href={`mailto:${content.email}`}
                >{content.email}</a
              >
            </dd>
          </div>
        </dl>
      </div>
    </div>
    <div
      class="bg-primary-500/20 mx-auto w-full h-full flex flex-col justify-center align-middle items-center p-6"
    >
      <form id="contact-form" class="w-full max-w-xl font-sans2">
        <div class="">
          <div class="mb-4">
            <label for="first-name" class="block mb-0 font-semibold">
              First Name
            </label>
            <input
              type="text"
              id="first-name"
              name="first-name"
              autocomplete="given-name"
              class="w-full h-9 p-2 border bg-gray-100 border-gray-400 rounded-sm focus:outline focus:outline-primary-600/50 focus:ring focus:ring-primary-600/50 focus:border-primary-600/50"
              required
            />
          </div>
          <div class="mb-4">
            <label for="last-name" class="block mb-0 font-semibold">
              Last Name
            </label>
            <input
              type="text"
              id="last-name"
              name="last-name"
              autocomplete="family-name"
              class="w-full h-9 p-2 border bg-gray-100 border-gray-400 rounded-sm focus:outline focus:outline-primary-600/50 focus:ring focus:ring-primary-600/50 focus:border-primary-600/50"
              required
            />
          </div>
          <div class="mb-4">
            <label for="phone" class="block mb-0 font-semibold">
              Phone
            </label>
            <input
              type="text"
              id="phone"
              name="phone"
              autocomplete="tel"
              class="w-full h-9 p-2 border bg-gray-100 border-gray-400 rounded-sm focus:outline focus:outline-primary-600/50 focus:ring focus:ring-primary-600/50 focus:border-primary-600/50"
              required
            />
          </div>
          <div class="mb-4">
            <label for="email" class="block mb-0 font-semibold">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              autocomplete="email"
              class="w-full h-9 p-2 border bg-gray-100 border-gray-400 rounded-sm focus:outline focus:outline-primary-600/50 focus:ring focus:ring-primary-600/50 focus:border-primary-600/50"
              required
            />
          </div>
          { content.label &&(
            <div class="mb-4">
              <label for="interest-service" class="block mb-0 font-semibold"
                >{content.label}</label
              >
              <select
                required
                id="interest-service"
                name="interest-service"
                class="w-full h-9 p-2  border bg-gray-100 border-gray-400 rounded-sm focus:outline focus:outline-primary-600/50 focus:ring focus:ring-primary-600/50 focus:border-primary-600/50"
              >
                {
                  content.options &&
                  content.options.map((option) => (
                    <option class="">{option}</option>
                  ))
                }
              </select>
            </div>
            )
          }
          <div class="mb-4">
            {
              content.extra_info &&
              content.extra_info.map((info) => (
              <label for={info.id} class="block mb-0 font-semibold">
                {info.label}
              </label>
              <input
                required
                id={info.id}
                name={info.id}
                type="text"
                class="w-full h-9 p-2 border bg-gray-100 border-gray-400 rounded-sm focus:outline focus:outline-primary-600/50 focus:ring focus:ring-primary-600/50 focus:border-primary-600/50"
              />
              ))
            }
          </div>
          {content.textArea && (
            <div class="mb-4">
              <label for="notes" class="block mb-0 font-semibold">
              </label>
              <textarea
                id="notes"
                name="notes"
                placeholder={content.textArea}
                class="w-full h-20 p-2 border bg-gray-100 border-gray-400 rounded-sm focus:outline focus:outline-primary-600/50 focus:ring focus:ring-primary-600/50 focus:border-primary-600/50"
              />
            </div>
          )}
          {/* Quiz Questions */}
          <fieldset class="pt-2 pb-6">
            <legend>1. What excites you the most about flying?</legend>
            <label><input type="radio" name="q1" value="A" /> The freedom to explore the skies</label><br />
            <label><input type="radio" name="q1" value="B" /> Mastering the technical challenges</label><br />
            <label><input type="radio" name="q1" value="C" /> Helping others by teaching or flying commercially</label><br />
            <label><input type="radio" name="q1" value="D" /> Experiencing the thrill of adventure</label>
          </fieldset>

          <fieldset class="pt-2 pb-6">
            <legend>2. How do you handle stressful situations?</legend>
            <label><input type="radio" name="q2" value="A" /> Stay calm, assess, and act decisively</label><br />
            <label><input type="radio" name="q2" value="B" /> Seek advice and guidance before making a decision</label><br />
            <label><input type="radio" name="q2" value="C" /> Take a deep breath and stay focused</label><br />
            <label><input type="radio" name="q2" value="D" /> Tackle the problem step by step</label>
          </fieldset>

          <fieldset class="pt-2 pb-6">
            <legend>3. Which of these skills describes you best?</legend>
            <label><input type="radio" name="q3" value="A" /> Quick decision-making</label><br />
            <label><input type="radio" name="q3" value="B" /> Attention to detail</label><br />
            <label><input type="radio" name="q3" value="C" /> Strong communication</label><br />
            <label><input type="radio" name="q3" value="D" /> All of the above</label>
          </fieldset>

          <fieldset class="pt-2 pb-6">
            <legend>4. How do you feel about math and physics?</legend>
            <label><input type="radio" name="q4" value="A" /> I enjoy them—they’re a fun challenge!</label><br />
            <label><input type="radio" name="q4" value="B" /> I’m okay with them but willing to learn</label><br />
            <label><input type="radio" name="q4" value="C" /> Not my favorite, but I’ll do what it takes to succeed</label><br />
            <label><input type="radio" name="q4" value="D" /> Let’s stick to flying, not equations!</label>
          </fieldset>

          <fieldset class="pt-2 pb-6">
            <legend>5. What’s your dream flying experience?</legend>
            <label><input type="radio" name="q5" value="A" /> Navigating a solo flight to an exciting destination</label><br />
            <label><input type="radio" name="q5" value="B" /> Piloting a large commercial aircraft</label><br />
            <label><input type="radio" name="q5" value="C" /> Flying alongside a beautiful coastline or mountain range</label><br />
            <label><input type="radio" name="q5" value="D" /> Becoming an instructor and sharing the joy of flight</label>
          </fieldset>

          <fieldset class="pt-2 pb-6">
            <legend>6. What’s your approach to learning new things?</legend>
            <label><input type="radio" name="q6" value="A" /> Dive in and practice as much as possible</label><br />
            <label><input type="radio" name="q6" value="B" /> Study thoroughly and build a strong foundation</label><br />
            <label><input type="radio" name="q6" value="C" /> Learn from others’ experiences and guidance</label><br />
            <label><input type="radio" name="q6" value="D" /> Mix hands-on practice with expert advice</label>
          </fieldset>

          <fieldset class="pt-2 pb-6">
            <legend>7. You’re at the controls, and an unexpected challenge arises. What’s your first instinct?</legend>
            <label><input type="radio" name="q7" value="A" /> Analyze the situation and take action</label><br />
            <label><input type="radio" name="q7" value="B" /> Stay calm and follow standard procedures</label><br />
            <label><input type="radio" name="q7" value="C" /> Call for assistance and use teamwork to solve it</label><br />
            <label><input type="radio" name="q7" value="D" /> Take a deep breath, trust your training, and handle it</label>
          </fieldset>

          <p class="hidden">
            <label>
              Don't fill this out if you're human:
              <input name="confirm-email" />
            </label>
          </p>
        </div>
        <div class="mt-8">
          <input
            type="checkbox"
            name="agree-data-collection"
            id="agree-data-collection"
            class="mr-2 size-6 lg:size-5"
          />

          <label
            for="agree-data-collection"
            class="text-gray-800 text-sm lg:text-base font-sans2"
            set:html={content.checkboxText}
          />
        </div>
        <button
          id="submit-button"
          form="contact-form"
          disabled
          type="submit"
          class="mx-auto mt-8 btn-accent cursor-not-allowed bg-gray-400 hover:bg-gray-400 hover:text-white"
        >
          Send Message
        </button>
      </form>

      <div id="confirmation" style="display: none;" class="py-12">
        <h2>Your form was successfully submitted!</h2>
      </div>

      <div id="result" style="display: none;">
        <h2>Your Pilot Personality:</h2>
        <div id="result-text" class="w-full text-xl py-8"></div>
      </div>
    </div>
  </div>
</section>
<script define:vars={{ FORM_WEBHOOK_URL, REDIRECT_URL }}>
  const checkbox = document.getElementById("agree-data-collection");
  const submitButton = document.getElementById("submit-button");

  checkbox.addEventListener("change", function () {
    if (checkbox.checked) {
      submitButton.disabled = false;
      submitButton.classList.remove(
        "cursor-not-allowed",
        "bg-gray-400",
        "hover:bg-gray-400"
      );
    } else {
      submitButton.disabled = true;
      submitButton.classList.add(
        "cursor-not-allowed",
        "bg-gray-400",
        "hover:bg-gray-400"
      );
    }
  });

  // Wait for the DOM data to be fully loaded
  document.addEventListener("DOMContentLoaded", function () {
    // Get the contactUs form element
    const contactForm = document.getElementById("contact-form");

    // Check if the contactUs form element exists
    if (contactForm !== null) {
      // Add submit event listener to the contactUs form
      contactForm.addEventListener("submit", function (event) {
        // Prevent the default form submission
        event.preventDefault();

        // Serialize the form data
        const formData = new FormData(contactForm);

        // Collect quiz answers
        const answers = {};
        formData.forEach((value, key) => (answers[key] = value));

        // Calculate the most chosen option
        const counts = { A: 0, B: 0, C: 0, D: 0 };

        // Iterate through answers and count occurrences
        for (const [key, value] of formData.entries()) {
          if (counts[value] !== undefined) {
            counts[value]++;
          }
        }

        // Log counts for debugging
        console.log("Counts:", counts);

        // Determine the answer with the highest count
        const highestScore = Object.entries(counts).reduce((highest, current) => {
          return current[1] > highest[1] ? current : highest;
        }, ["", 0]);

        console.log("Highest Score:", highestScore);

        // Determine the personality type
        const personalityMap = {
          A: `<h2 id="result-text" class="w-full text-xl text-accent-600 font-bold -skew-x-12">Sky’s the Limit!</h2><p>You’re a natural adventurer with the spirit of a pilot. You’re ready to take on the skies and embrace the thrill of flying. Let’s get you started on your journey!</p>`,
          B: `The Perfectionist Pilot<br>You have the precision and discipline required for aviation. Your attention to detail will make you a safe and reliable pilot. The cockpit is calling your name!`,
          C: `The Team Player<br>You thrive on communication and collaboration. Whether as a commercial pilot or instructor, you’re destined to soar high while helping others reach their goals.`,
          D: `The Passionate Learner<br>Your curiosity and determination to learn make you a great candidate for flight training. Let’s channel that passion into becoming a skilled aviator!`
        };

        const pilotPersonality = personalityMap[highestScore[0]] || "Unique: You have a mix of skills!";        // Display the result
        const resultDiv = document.getElementById("result");
        const resultText = document.getElementById("result-text");

        if (resultDiv && resultText) {
          resultText.innerHTML = pilotPersonality;
          resultDiv.style.display = "block";
        }

        // Check the value of the honeypot field
        const confirmEmailValue = formData.get("confirm-email");
        if (confirmEmailValue === "" || confirmEmailValue === null) {
          // If the honeypot field is empty, it's a human
          // Set the form action to the URL for processing the form and redirecting to thank you
          contactForm.action = FORM_WEBHOOK_URL;
        }

        // Convert FormData to URLSearchParams
        const urlSearchParams = new URLSearchParams();
        for (const pair of formData.entries()) {
          urlSearchParams.append(pair[0], pair[1]);
        }

        // Send an AJAX request to submit the form
        const xhr = new XMLHttpRequest();
        xhr.open("POST", contactForm.action);
        xhr.setRequestHeader(
          "data-Type",
          "application/x-www-form-urlencoded"
        );
        xhr.onload = function () {
          // Check if the request was successful (status 200)
          if (xhr.status === 200) {
            // Redirect the user after a successful form submission
            document.getElementById('confirmation').style.display = 'block';
          } else {
            // Handle errors if any
            console.error("Form submission failed:", xhr.statusText);
          }
        };
        xhr.onerror = function () {
          // Handle network errors
          console.error("Network error occurred while submitting the form.");
        };
        xhr.send(urlSearchParams);
      });
    } else {
      console.error("Quiz form element not found.");
    }
  });
</script>
