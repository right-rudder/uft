---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { content } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[content.imagePath]) {
  throw new Error(
    `"${content.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
}
---

<section
  class="relative lg:mt-0 h-screen lg:h-[72vh] -z-0 bg-accent-600 text-white flex flex-col items-center justify-center overflow-hidden"
>
  <Image
    src={images[content.imagePath]()}
    alt={content.imageAlt}
    loading={"lazy"}
    class="absolute inset-0 -z-0 object-cover object-center w-full h-full"
    widths={[240, 540, 720, 1080, 1440, 1980]}
    sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
  />
  <div
    class="absolute bg-gradient-to-br from-accent-600/70 to-accent-600/80 w-full h-full z-0"
  >
  </div>
  <div
    class="font-sans2 py-12 mt-20 lg:mt-0 text-center z-10 flex flex-col items-center gap-4 px-5 h-full lg:pt-28 justify-center"
  >
    <h3
      class="text-3xl md:text-4xl lg:text-6xl max-w-3xl font-black italic font-sans tracking-normal text-slate-100 uppercase"
      set:html={content.header}
    />
    <h4
      class="text-xl lg:text-3xl font-bold text-slate-300 max-w-3xl"
      set:html={content.subheader}
    />
    <p
      class="text-base lg:text-xl/5 mt-3 font-normal tracking-wide text-slate-200 text-center max-w-3xl"
      set:html={content.paragraph}
    />
    <div
      class="mt-6 w-full flex flex-wrap justify-center align-middle items-center gap-6 z-10 pb-8"
    >
      {
        content.buttons.map((btn) => (
          <a
            href={btn.link}
            target={btn.link.includes("http") ? "_blank" : "_self"}
            class={`btn-accent bg-white text-slate-900 w-full md:w-auto`}
          >
            {btn.name}
          </a>
        ))
      }
    </div>
  </div>
</section>
