---
const today = new Date();
import { FaPhoneSquareAlt } from "react-icons/fa";
import { IoLocationSharp } from "react-icons/io5";
import { MdEmail } from "react-icons/md";
import {
  COMPANY_NAME,
  EMAIL_ADDRESS,
  PHONE_NUMBER,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
  FACEBOOK_URL,
  INSTAGRAM_URL,
  LINKEDIN_URL,
  TWITTER_URL,
  YOUTUBE_URL,
  SITE_DESCRIPTION,
  LOCATIONS,
} from "../consts";
import { footerLinks } from "../data/footerLinks";
import logo from "../assets/uft-logo-new-bg-blue-removebg-preview.png";
import { Image } from "astro:assets";
import ImageComp from "./ImageComp.astro";

const date = new Date();
const year = date.getFullYear();

const { pathname } = Astro.url;
---

<footer class="relative bg-gradient-to-br from-primary-900 font-sans to-black">
  <div
    class="px-4 pt-24 pb-16 lg:pb-2 md:pt-12 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8"
  >
    <div class="grid gap-16 row-gap-10 mb-8 lg:grid-cols-6">
      <div class="lg:col-span-2">
        <a
          href="/"
          aria-label="Go home"
          title="Company"
          class="flex justify-center items-center w-full"
        >
          <Image
            src={logo}
            alt="Universal Flight Training Logo"
            class="object-contain h-36 w-auto px-5 lg:px-0 drop-shadow-lg"
            widths={[240, 540, 720, 1080, 1440, 1980]}
            sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
          />
        </a>
        <div class="mt-2 lg:max-w-sm font-sans2">
          <p
            class="text-sm text-white px-3 lg:px-0 text-center lg:text-justify"
          >
            {SITE_DESCRIPTION}
          </p>
          <div
            class="flex justify-center lg:justify-start align-middle items-center w-full"
          >
            <a
              href="/privacy-policy"
              class="mt-3 mr-4 transition-colors duration-300 text-sm text-white hover:text-accent-100"
              >Privacy Policy
            </a>
            <span class="text-accent-200 text-sm pt-3"> &#x2022; </span>
            <a
              href="/terms-of-service"
              class="mt-3 ml-4 transition-colors duration-300 text-sm text-white hover:text-accent-100"
              >Terms of Service
            </a>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-2 mt-8 gap-9 lg:col-span-4 lg:grid-cols-9">
        {
          footerLinks.map((column, index) => (
            <div
              class={`${index % 2 === 0 ? "text-left" : "text-right lg:text-left"} lg:col-span-2`}
            >
              <p class="font-bold text-xl font-sans lg:text-md tracking-wide text-accent-200">
                {column.title}
              </p>
              <ul class="mt-2 space-y-2 text-lg font-sans2 lg:text-sm">
                {column.links.map((link) => (
                  <li>
                    <a
                      href={link.link}
                      target={link.target}
                      class="transition-colors duration-300 text-white hover:text-accent-100"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
        <div class="grid grid-cols-1 gap-y-4 lg:col-span-3">
          {
            LOCATIONS.map((location, index) => (
              <div class="text-right lg:text-center bg-accent-100/20 rounded p-2 lg:pt-8 text-sm lg:text-lg">
                <p
                  class="font-bold tracking-wide text-base text-accent-200 leading-none"
                  set:html={location.title}
                />
                <a
                  href={location.gMaps}
                  target="_blank"
                  class="mt-2 space-y-1 font-sans2 transition-colors text-xs lg:text-base duration-300 text-white hover:text-accent-100"
                >
                  <>
                    <span class="">{location.address}</span>
                    <br />
                    <span class="">
                      {location.city}, {location.state} {location.zip}
                    </span>
                  </>
                </a>
                <a aria-labelledby="Call Us Now" title="Call Us Now"
                  href={`tel:${location.phone}`}
                  class="mt-3 text-right justify-end lg:justify-center font-sans2 lg:text-center transition-colors duration-300 text-white hover:text-accent-100 flex items-center align-middle"
                >
                  <FaPhoneSquareAlt className="mr-2 text-lg" />
                  {location.phone}
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
  <div class="pt-5 pb-10 border-t border-accent">
    <div
      class="mx-auto flex flex-col gap-2 lg:flex-row justify-between items-center align-middle max-w-7xl"
    >
      <p class="text-sm text-gray-100 text-center">
        Â© Copyright {year} {COMPANY_NAME} LLC. All rights reserved.
      </p>
      <span class="text-white text-center flex gap-2">
        Powered by
        <a
          href="https://rightruddermarketing.com/"
          target="_blank"
          class="text-bold group hover:underline hover:text-white/70 flex gap-2 duration-200"
        >
          <ImageComp
            imagePath="/src/assets/RRM-R-symbol-474.webp"
            imageAlt="Right Rudder Marketing Logo"
            styles="h-6 w-auto group-hover:scale-105 group-hover:brightness-125 drop-shadow-md duration-300"
          />
          More Right Rudder</a
        >
      </span>
      <div
        class="flex items-center justify-center align-middle mt-4 space-x-4 sm:mt-0"
      >
        <a
          href={INSTAGRAM_URL}
          target="_blank"
          aria-label="Instagram"
          title="Instagram"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 30 30" fill="currentColor" class="h-10 lg:h-6">
            <circle cx="15" cy="15" r="4"></circle>
            <path
              d="M19.999,3h-10C6.14,3,3,6.141,3,10.001v10C3,23.86,6.141,27,10.001,27h10C23.86,27,27,23.859,27,19.999v-10   C27,6.14,23.859,3,19.999,3z M15,21c-3.309,0-6-2.691-6-6s2.691-6,6-6s6,2.691,6,6S18.309,21,15,21z M22,9c-0.552,0-1-0.448-1-1   c0-0.552,0.448-1,1-1s1,0.448,1,1C23,8.552,22.552,9,22,9z"
            ></path>
          </svg>
        </a>
        <a
          href={FACEBOOK_URL}
          target="_blank"
          aria-label="Facebook"
          title="Facebook"
          class="transition-colors duration-300 text-white hover:text-white/70 hover:scale-105"
        >
          <svg viewBox="0 0 24 24" fill="currentColor" class="h-8 lg:h-5">
            <path
              d="M22,0H2C0.895,0,0,0.895,0,2v20c0,1.105,0.895,2,2,2h11v-9h-3v-4h3V8.413c0-3.1,1.893-4.788,4.659-4.788 c1.325,0,2.463,0.099,2.795,0.143v3.24l-1.918,0.001c-1.504,0-1.795,0.715-1.795,1.763V11h4.44l-1,4h-3.44v9H22c1.105,0,2-0.895,2-2 V2C24,0.895,23.105,0,22,0z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
