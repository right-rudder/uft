---
import { Image } from "astro:assets";
import HeroImage from "/src/assets/uft-2006-Cessna-Skyhawk-172s.jpg";

const { content } = Astro.props;
---

<section
  class="relative lg:mt-0 min-h-[95vh] bg-accent-300/10 text-white flex flex-col items-center justify-center overflow-hidden"
>
  <Image
    src={HeroImage}
    alt="UFT's 2006 Cessna Skyhawk 172s on the runway"
    width={1920}
    loading="eager"
    fetchpriority="high"
    class="absolute inset-0 z-0 object-cover object-center w-full h-full max-h-[900px]"
    widths={[540, 720, 1080, 1440, 1920]}
    sizes="100vw"
  />
  <div
    class="absolute bg-accent-600/60 w-full h-full z-0"
  >
  </div>
  <!-- Text -->
  <div
    class="text-white mt-20 lg:mt-0 text-center lg:text-left z-10 flex flex-col items-center gap-4 px-5 h-full lg:pt-28 justify-center pb-4"
  >
    <h1
      class="text-5xl uppercase italic md:text-6xl lg:text-7xl drop-shadow-lg xl:text-8xl text-center font-black tracking-wide text-gray-100 "
      set:html={content.headerH1}
    />
    <h2
      class="text-sm lg:text-xl mt-3 font-semibold tracking-wide text-center max-w-4xl italic"
      set:html={content.paragraph}
    />
    <div
      class="mt-6 flex flex-wrap justify-center align-middle items-center gap-6 z-10"
    >
      {
        content.buttons.map((btn) => (
          <a
            href={btn.link}
            target={`${btn.link.includes("http") ? "_blank" : "_self"}`}
            class={`${btn.primary ? "btn-primary" : "btn-accent"} w-full md:w-auto`}
          >
            {btn.name}
          </a>
        ))
      }
    </div>
  </div>
</section>
